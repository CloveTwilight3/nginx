# Redirect root HTTP ‚Üí www HTTPS
server {
    listen 80;
    listen [::]:80;
    server_name butterfly-network.win www.butterfly-network.win;

    return 301 https://www.butterfly-network.win$request_uri;
}

# Redirect root HTTPS ‚Üí www
server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;
    server_name butterfly-network.win;

    ssl_certificate     /etc/letsencrypt/live/www.butterfly-network.win/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/www.butterfly-network.win/privkey.pem;
    include /etc/letsencrypt/options-ssl-nginx.conf;
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem;

    return 301 https://www.butterfly-network.win$request_uri;
}

# üåê WWW Site (PK site)
server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;
    server_name www.butterfly-network.win;

    ssl_certificate     /etc/letsencrypt/live/www.butterfly-network.win/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/www.butterfly-network.win/privkey.pem;
    include /etc/letsencrypt/options-ssl-nginx.conf;
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem;

    include /etc/nginx/snippets/error_pages.conf;
    include /etc/nginx/snippets/csp-pk.conf;
    include /etc/nginx/snippets/general-headers.conf;

    location / {
        proxy_pass http://127.0.0.1:8004;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_set_header Host $host;
        proxy_cache_bypass $http_upgrade;
    }
}

